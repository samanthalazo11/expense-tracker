<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Expense List</title>
</head>
<body>
    <nav>
        <%-include('./partials/nav')%>

    </nav>

<div class="intro"></div>

    <h1> Expenses </h1>
    <% let total = 0 %>
    <ul>
        <% expense.forEach(expense => { %>
            <% total+=parseInt(expense.spent)%>

            <li>
                <a href="/expenses/<%=expense._id%>">
                    <%=expense.name%>
                </a>
            </li>

       <% }) %>
    </ul>
    <p>Total Spent: <%=total%> </p>

    <nav>
        <a href="/expenses/new">Add Expense</a>
        <a href="/planner">Back to Planner</a>
    </nav>



</body>
</html>